<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".createProject">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/projectName"
                android:textColor="#000000"
                android:text="Project Name "
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>




        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/projectOwner"
                android:textColor="#000000"
                android:text="Project Owner"
                android:textSize="20sp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>





        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:textColor="#000000"
                android:text="Project Description"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:hint="Order tracker"
                android:id="@+id/projectDescription"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:textColor="#000000"
                android:text="Start Date"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:ems="15"
                android:id="@+id/startDate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#000000"
                android:textSize="20sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView

                android:textColor="#000000"
                android:text="End Date"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:ems="15"
                android:id="@+id/endDate"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/userStories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="User Stories"
                android:textColor="#000000"
                android:textSize="21sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >
            <EditText
                android:id="@+id/newStories"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="New user Stories"
                android:textColor="#000000"
                android:textSize="21sp" />

             <Button
                 android:text="add"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/createProject"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sprints"
                android:textColor="#000000"
                android:textSize="21sp" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/addSprint"
                android:textColor="#000000"
                android:text="Add Sprint"
                android:textSize="21sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </androidx.cardview.widget.CardView>

    </LinearLayout>


</ScrollView>